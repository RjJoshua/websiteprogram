@page
@model IndexModel
@{
    ViewData["Title"] = "String Comparison";
}

<h1>String Comparison</h1>

<form method="post">
    <div class="form-group">
        <label for="inputString1">Input the 1st string:</label>
        <input type="text" id="inputString1" name="InputString1" class="form-control" />
    </div>
    <div class="form-group">
        <label for="inputString2">Input the 2nd string:</label>
        <input type="text" id="inputString2" name="InputString2" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Compare Strings</button>
</form>

@if (!string.IsNullOrEmpty(Model.ComparisonResult))
{
    <div class="mt-3">
        <p>@Model.ComparisonResult</p>
    </div>
}
